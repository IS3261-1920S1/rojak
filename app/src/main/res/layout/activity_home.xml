<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.home.HomeActivity"
    android:background="#012959">

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.rojak.TitleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"/>

    <LinearLayout
        android:padding="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#ffcc33">

        <Button
            android:id="@+id/button_goto_wallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Wallet"/>

        <Button
            android:id="@+id/button_goto_qr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Purchase"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:text="TopUp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:background="#EE7631">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="My Healtiness Score"/>

        <SeekBar
            android:layout_width="match_parent"
            android:progressDrawable="@drawable/rating_seekbar_progress"
            android:thumb="@drawable/rating_seekbar_thumb"
            android:enabled="false"
            android:progress="7"
            android:layout_height="0dp"
            android:layout_weight="3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Perhaps you could ..."/>




    </LinearLayout>

</LinearLayout>