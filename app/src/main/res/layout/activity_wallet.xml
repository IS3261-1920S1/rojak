<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.wallet.WalletActivity">


    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.rojak.TitleFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:textSize="25sp"
        android:textAlignment="textStart"
        android:paddingLeft="10dp"
        android:text="Balance:"
        android:gravity="bottom"/>

    <TextView
        android:id="@+id/currentWalletAmount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:text="WalletAmount"
        android:gravity="center"/>

    <ListView
        android:id="@+id/walletTransactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/walletActivity_button_topup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="Top Up"/>

</LinearLayout>